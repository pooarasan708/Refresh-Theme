<div class="banner_section_custom">
  <div class="page-width">
    {% render 'heading' %}
    <div class="banner_contain">
      <div class="desktop_img">
         {%- if section.settings.image != blank -%}
           {{ section.settings.image
              | image_url: width: 1500
              | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
           }}
          {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      <div class="mob_img">
         {%- if section.settings.image_mob != blank -%}
           {{ section.settings.image_mob
              | image_url: width: 1500
              | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
           }}
          {%- else -%}
          {{ section.settings.image
              | image_url: width: 1500
              | image_tag: loading: 'lazy'
           }}
        {%- endif -%}
        
      </div>
    </div>
  </div>
</div>

<style>
.test .main-page-title {
    text-align: center;
}
.banner_section_custom .banner_contain img {
    width: 100%;
    height: auto;
}
@media screen and (max-width: 767px) {
.banner_section_custom .banner_contain .desktop_img {
    display: none;
}
}
@media screen and (min-width: 768px) {
.banner_section_custom .banner_contain .mob_img {
    display: none;
}
}
</style>
{% schema %}
  {
    "name": "banner section custom",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"heading"
      } ,
      {
          "type": "select",
          "id": "box_align",
          "options": [
            {
              "value": "left",
              "label": "left"
            },
            {
              "value": "center",
              "label": "center"
            },
            {
              "value": "right",
              "label": "right"
            }
          ],
          "default": "center",
          "label": "center"
        },
      {
        "type":"image_picker",
        "id":"image",
        "label":"Image"
      },
      {
        "type":"image_picker",
        "id":"image_mob",
        "label":"Image"
      }
    ],
"presets":[{
  "name": "banner section custom"
}]
  }
{% endschema %}

